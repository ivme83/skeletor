

<!-- views/home.handlebars -->
{{#if user}}


  <br><br><br>

  <div class="container">
    <div id="start-card" class="card-panel">
      <div class="row">
        <div class="col s12">
          <p class="form-q center grey-text text-darken-3">Would you like to Sequelize Init your project or have more customizable features?</p>
        </div>

        <div class="col s12">
          <form>
            <div class="container">
              <div class="col m6">
                <p class="center">
                  <input class="with-gap" value="seq-init" name="group1" type="radio" id="seq-init-radio"/>
                  <label for="seq-init-radio">Sequelize init</label>
                </p>
              </div>  
              <div class="col m6">
                <p class="center">
                  <input class="with-gap" value="customize" name="group1" type="radio" id="customize-radio" />
                  <label for="customize-radio">Customize</label>
                </p>
              </div>  
                                        
              <br><br><br><br>

              <div class="col m12 center">
                <button type="button" class="btn next-btn waves-effect waves-light deep-purple" name="action">Next
                  <i class="material-icons right">send</i>
                </button>    
              </div>                                           
            </div>
          </form>
        </div>
      </div>
    </div>

    <div id="init-card" class="card-panel hide">
      <div class="row">
        <div class="col s12">
          <p class="form-q center">What would you like to initialize?</p>
        </div>

        <div class="col s12">
          <form>
            <div class="container">
              <div class="col s6 offset-s3">
                <p>
                  <input class="colored" type="checkbox" id="check1" />
                  <label for="check1">Init Config</label>
                </p>    
              </div>
              <div class="col s6 offset-s3">
                <p>
                  <input class="colored" type="checkbox" id="check3" />
                  <label for="check3">Init Migration</label>
                </p>
              </div>  
              <div class="col s6 offset-s3">
                <p>
                  <input class="colored" type="checkbox" id="check2" />
                  <label for="check2">Init Models</label>
                </p>
              </div>  
              <div class="col s6 offset-s3">
                <p>
                  <input class="colored" type="checkbox" id="check4" />
                  <label for="check4">Init Seeders</label>
                </p>
              </div> 


              <div class="col m12 center">
                <br><br>

                <button id="btnSeq" type="button" class="btn deep-purple white-text waves-effect waves-light" name="action">Next
                  <i class="material-icons right">send</i>
                </button>    
              </div>

                    
            </div>

              

          </form>


        </div>    
      </div>

        

    </div>
  </div>

{{else}}

  <br><br><br><br>

  <div class="container">
    <div id="sign-in-card" class="card-panel showing deep-purple">

      <p style="font-size: 22px" class="center deep-purple-text text-accent-1">Welcome to Skelly! The MVC folder stucture automater</p>
      
      <br>

      <p class="center">
        <a href="/signin"><button type="button" class="btn white deep-purple-text">Get Started<i class="material-icons right">send        
        </i></button></a>
      </p>
    </div>  
  </div>
  

{{/if}}

